{
  "name": "chersite",
  "description": "Web base Boilerplate for cher-ami projects.",
  "version": "3.0.0",
  "author": "cher-ami",
  "main": "src/index.tsx",
  "type": "module",
  "scripts": {
    "init": "npm i && cd apps/front && npm install",
    "init:ci": "npm ci && cd apps/front && npm ci",
    "setup:front": "cd apps/front && npm run setup",
    "dev:front": "cd apps/front && npm run dev",
    "test:front": "cd apps/front && npm run test",
    "build:front": "cd apps/front && npm run build",
    "scaffold:front": "cd apps/front && npm run scaffold",
    "prepare": "husky install",
    "scaffold": "node cli/tasks/scaffold-component/scaffold-component.js",
    "scaffold-wp": "node cli/tasks/scaffold-wp/scaffold-wp.js"
  },
  "devDependencies": {
    "@wbe/debug": "^1.1.0",
    "@wbe/mfs": "^0.1.1",
    "change-case": "^4.1.2",
    "lint-staged": "^13.2.2",
    "husky": "^8.0.0",
    "prettier": "^2.8.8",
    "inquirer": "^9.2.7",
    "chalk": "^5.2.0"
  },
  "lint-staged": {
    "apps/front/**/*.{tsx,ts,jsx,js,less,css,json,md}": [
      "npx prettier --write ."
    ]
  },
  "prettier": {
    "printWidth": 90,
    "semi": false
  }
}
