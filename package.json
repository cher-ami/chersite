{
  "name": "chersite",
  "description": "monorepo base for cher-ami projects.",
  "version": "2.1.0",
  "author": "cher-ami",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:front": "pnpm -F @chersite/front run dev",
    "test:front": "pnpm -F @chersite/front run test",
    "build": "turbo run build",
    "reset": "rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm -F {apps/*} run reset",
    "re-install": "npm run reset && pnpm install",
    "prepare": "husky install",
    "setup": "pnpm -F @chersite/cli run setup",
    "scaffold": "pnpm -F @chersite/cli run scaffold",
    "scaffold-wp": "pnpm -F @chersite/cli run scaffold-wp"
  },
  "devDependencies": {
    "turbo": "^1.7.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0"
  }
}
