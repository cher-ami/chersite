{
  "name": "chersite",
  "description": "Web base Boilerplate for cher-ami projects.",
  "version": "0.5.0",
  "main": "src/index.tsx",
  "author": "cher-ami",
  "browserslist": [
    "last 2 versions",
    "iOS >= 12"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "setup": "npm i && node config/tasks/setup/setup.js && npm run prepare",
    "scaffold": "node config/tasks/scaffold-component/scaffold-component.js",
    "scaffold-wp": "node config/tasks/scaffold-wp/scaffold-wp.js",
    "prepare": "husky install",
    "postinstall": "cp -n .env .env.local || true",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@cher-ami/router": "^3.0.0-beta.6",
    "@solid-js/css-flat": "^1.0.1",
    "@wbe/debug": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/events": "^3.0.0",
    "@types/node": "^18.6.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-legacy": "^2.0.0",
    "@vitejs/plugin-react": "^2.0.0",
    "autoprefixer": "^10.4.7",
    "change-case": "^4.1.2",
    "env-cmd": "^10.1.0",
    "husky": "^8.0.1",
    "inquirer": "^9.0.2",
    "ip": "^1.1.8",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "portfinder-sync": "^0.0.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vite-plugin-checker": "^0.4.9"
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js,less,css,json,md}": [
      "prettier --write"
    ]
  }
}
