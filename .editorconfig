# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

[*.md]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space
