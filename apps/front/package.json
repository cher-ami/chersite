{
  "name": "@cher-ami/front",
  "description": "front base Boilerplate for cher-ami projects.",
  "version": "2.1.0",
  "author": "cher-ami",
  "main": "src/index.tsx",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/index-server.tsx --outDir dist/server",
    "build:scripts": "vite build -c vite.scripts.config.ts",
    "build:static": "vite build --outDir dist/static",
    "build": "npm run build:server && npm run build:scripts && npm run build:static && npm run generate",
    "generate": "node dist/_scripts/exe-prerender.js",
    "preview": "serve dist/static",
    "setup": "node config/tasks/setup/setup.js && npm run prepare",
    "scaffold": "node config/tasks/scaffold-component/scaffold-component.js",
    "scaffold-wp": "node config/tasks/scaffold-wp/scaffold-wp.js",
    "prepare": "cd ../../ && husky install",
    "prettier": "prettier --write ",
    "test:watch": "vitest",
    "test": "vitest run",
    "reset": "rm -rf dist && rm -rf node_modules && rm -rf .turbo && rm -rf build-stats.html"
  },
  "dependencies": {
    "@cher-ami/css-flat": "^1.0.1",
    "@cher-ami/router": "^3.0.0-beta.16",
    "@cher-ami/utils": "^1.0.1",
    "@wbe/debug": "^1.1.0",
    "cross-fetch": "^3.1.5",
    "history": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cher-ami/types": "workspace:*",
    "@types/events": "^3.0.0",
    "@types/node": "^18.11.15",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-legacy": "^3.0.1",
    "@vitejs/plugin-react": "^3.0.1",
    "autoprefixer": "^10.4.13",
    "chalk": "^5.2.0",
    "change-case": "^4.1.2",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "husky": "^8.0.2",
    "inquirer": "^9.1.4",
    "ip": "^1.1.8",
    "less": "^4.1.3",
    "lint-staged": "^13.1.0",
    "portfinder-sync": "^0.0.2",
    "postcss": "^8.1.0",
    "prettier": "^2.8.1",
    "rollup-plugin-visualizer": "^5.8.3",
    "terser": "^5.16.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-checker": "^0.5.2",
    "vitest": "^0.25.8"
  },
  "optionalDependencies": {
    "esbuild-android-arm64": "^0.15.18",
    "fsevents": "^2.3.2"
  },
  "browserslist": [
    "last 2 versions",
    "iOS >= 12"
  ],
  "lint-staged": {
    "*.{tsx,ts,jsx,js,less,css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 90,
    "semi": false
  }
}
