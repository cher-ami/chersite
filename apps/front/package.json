{
  "name": "chersite-front",
  "version": "0.1.0",
  "main": "src/index-client.tsx",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.dev.ts",
    "start": "cross-env NODE_ENV=production node scripts/server.prod.js",
    "start:local": "cross-env NODE_ENV=production node dist/ssr/scripts/server.prod.js",
    "spa:preview": "serve dist/spa",
    "static:preview": "serve dist/static/client",
    "static:generate": "node dist/static/scripts/exe-prerender.js",
    "static:prerender-server": "node dist/static/scripts/exe-prerender-server.js",
    "test:watch": "vitest",
    "test": "vitest run",
    "build:spa": "cross-env VITE_SPA=true vite build --outDir dist/spa",
    "build:ssr-scripts": "vite build -c vite.ssr-scripts.config.ts",
    "build:ssr-client": "vite build --outDir dist/ssr/client",
    "build:ssr-server": "vite build --ssr src/index-server.tsx --outDir dist/ssr/server",
    "build:ssr": "npm run build:ssr-scripts && npm run build:ssr-client && npm run build:ssr-server",
    "build:static-scripts": "vite build -c vite.static-scripts.config.ts",
    "build:static-client": "vite build --outDir dist/static/client",
    "build:static": "npm run build:static-scripts && npm run build:static-client && npm run static:generate",
    "build": "npm run build:spa && npm run build:ssr && npm run build:static"
  },
  "dependencies": {
    "@cher-ami/css-flat": "^1.0.1",
    "@cher-ami/debug": "^1.2.0",
    "@cher-ami/router": "^3.5.4",
    "@cher-ami/utils": "^1.4.1",
    "@fastify/basic-auth": "^6.2.0",
    "cross-fetch": "^4.1.0",
    "history": "^5.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cher-ami/mfs": "^0.2.0",
    "@eggjs/ip": "^2.1.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/middie": "^9.0.3",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.1.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-legacy": "^6.0.1",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.4.1",
    "cross-env": "^7.0.3",
    "fastify": "^5.2.1",
    "husky": "^9.1.7",
    "portfinder-sync": "^0.0.2",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "1.84.0",
    "serve": "^14.2.4",
    "terser": "^5.38.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-checker": "^0.8.0",
    "vitest": "^3.0.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.34.6",
    "esbuild-android-arm64": "^0.15.18",
    "fsevents": "^2.3.3"
  },
  "browserslist": [
    "last 2 versions",
    "iOS >= 12"
  ]
}
